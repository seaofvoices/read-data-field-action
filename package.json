{
  "name": "read-data-field-action",
  "private": true,
  "version": "1.0.0",
  "description": "GitHub Action to read a specified property from a data file. Supports json, json5, jsonc, yaml and toml files.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/seaofvoices/read-data-field-action.git"
  },
  "type": "module",
  "homepage": "https://github.com/seaofvoices/read-data-field-action",
  "author": {
    "name": "jeparlefrancais",
    "email": "jeparlefrancais21@gmail.com"
  },
  "license": "MIT",
  "files": [
    "dist/index.js"
  ],
  "main": "dist/index.js",
  "keywords": [
    "github",
    "action",
    "json",
    "jsonc",
    "json5",
    "toml",
    "yml",
    "yaml",
    "extract"
  ],
  "scripts": {
    "lint": "eslint .",
    "build": "rollup -c",
    "format": "prettier src/**/*.js --write",
    "style-check": "prettier src/**/*.js --check",
    "test": "vitest run --coverage",
    "snap": "vitest run -u",
    "clean": "rm -rf node_modules coverage"
  },
  "dependencies": {
    "@actions/core": "^1.11.1",
    "comment-json": "^4.2.5",
    "json5": "^2.2.3",
    "smol-toml": "^1.4.2",
    "yaml": "^2.8.1"
  },
  "optionalDependencies": {
    "@rollup/rollup-linux-x64-gnu": "*"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-terser": "^0.4.4",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.33.0",
    "prettier": "^3.6.2",
    "rollup": "^4.46.2",
    "vitest": "^3.2.4"
  },
  "prettier": {
    "trailingComma": "es5",
    "semi": false,
    "singleQuote": true
  }
}
